*{
	margin:0;
	padding:0;
	font-size:12px;
}

body{
	background-color:#f5f5f5;
}

.top{
	width:100%;
	height:27px;
	background:url(../images/top_bg.jpg) repeat-x;
}
.top_content{
	width:1000px;
	margin:0 auto;
}
.top_content ul li{
	list-style-image:url(../images/li_bg.gif);
	float:right;
	width:70px;
	line-height:27px;
}
.top_content a:link,.top_content a:visited{
	color:#8e8e8e;
	text-decoration:none;
}
.top_content a:hover,.top_content a:active{
	color:#900;
	text-decoration:none;
}

.wrap{
	width:1000px;
	margin:0 auto;
}
.logo{
	height:80px;
	background-color:#fff;
	overflow:hidden;
}
.logo_left{
	width:200px;
	float:left;
}
.logo_right{
	width:300px;
	float:right;
	height:28px;
	margin:30px;
	color:#8e8e8e;
}
.logo_right img{
	vertical-align:middle;
	margin-right:10px;
}
.nav{
	height: 40px;

}
.nav_left{
	width:10px;
	background:url(../images/nav_left.jpg) no-repeat;
	
}
.nav_mid{
	width:980px;
	background:url(../images/nav_bg.jpg) repeat-x;
	
}
.nav_right{
	width:10px;
	background:url(../images/nav_right.jpg) no-repeat;
	
}
.nav_left,.nav_mid,.nav_right{
	float:left;
	height:40px;
}

.nav_mid_left,.nav_mid_right{
	float:left;
}
.nav_mid_left{
	width:680px;
}
.nav_mid_right{
	width:300px;
}
.nav_mid_left li{
	float:left;
	line-height:40px;
	width:100px;
	list-style-type:none;
	text-align:center;	
}

.nav_mid_left a:link,.nav_mid_left a:visited{
	text-decoration:none;
	font-size:16px;
	color:#fff;
}
.nav_mid_left a:hover{
	color:#900;
}

.search_text{
	width:190px;
	height:25px;
	margin-top:5px;
	background:url(../images/search.jpg) no-repeat right center;
	background-color:white;
	padding-right:25px;
	border:1px solid white;
}
.ad{
	height:310px;
	overflow:hidden;
}
.main{
	height:250px;
	background-color:#fff;
	margin-top:5px;
}
.news{
	width:340px;
	border:1px solid #e8e8e8;
	
	
}
.course{
	width:410px;
	border:1px solid #e8e8e8;
	background-color:yellow;
	margin:0px 7px;
}
.sidebar{
	width:230px;
	background-color:green;
	
}
.news,.course,.sidebar{
	height:250px;
    float:left;
}
.title{
	height:35px;
	border-bottom:2px solid #e8e8e8;
}
.title_left{
	float:left;
	line-height:35px;
	margin-left:10px;
}
.title_right{
	float:right;
	line-height:35px;
}
.title_right a:link{
	text-decoration:none;
	color:#999999;

}
.pic_news{
	height:80px;
	
	line-height:22px;
}
.pic_news img{
	float:left;
	margin-right:10px;
}
.pic_news a{
	color:#c00;
	text-decoration:none;
}

.news_list{
	float:left;
	margin-top:10px;
}
.news_list a{
	text-decoration:none;
	color:black;
	
}
.news_list a:hover{
	color:#c00;
}
.news_list li{
	list-style-type:none;
	padding:3px 0;
	background:url(../images/list.jpg) no-repeat;
	
}